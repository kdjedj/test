<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
	PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.teamproject.spring.teamgg.mapper.GuestMapper">
	<select id="getList" resultType="com.teamproject.spring.teamgg.vo.GuestVO">
<!-- 		SELECT * from tbl_guest -->
		SELECT * from ${@com.teamproject.spring.teamgg.vo.GuestVO@TABLE_NAME_GUEST} limit #{page},3
	</select>
	
	<select id="read" resultType="com.teamproject.spring.teamgg.vo.GuestVO">
		select * from tbl_guest where bno = #{bno}
	</select>	
	
	<delete id="del">
		delete from tbl_guest where bno = #{bno}
	</delete>
		
	<insert id="write">
		insert into tbl_guest (btext) values (#{btext})
	</insert>		
	
	<update id="modify">
		update tbl_guest
		set btext = #{btext}
		where bno = #{bno}
	</update>
	
	<select id="getTotalCount" resultType="int">
		SELECT count(*) from ${@com.teamproject.spring.teamgg.vo.GuestVO@TABLE_NAME_GUEST}
	</select>
</mapper>